<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <submitter>Contracts</submitter>
        <type>roleSubordinatesInternal</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>Grants</submitter>
        <type>roleSubordinatesInternal</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>I_RS_Administring_Organisation__c</field>
        <field>I_RS_Account_Organisation__c</field>
        <field>I_RS_IP_Position__c</field>
        <field>I_RS_Amount_Requested__c</field>
        <field>I_RS_Awarded_Amount__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Update_Approval_Toggle_field_two</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>I_RS_First_Approver__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Seeking Approval from First Approver</label>
        <name>Seeking_Approval_from_First_Approver</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>I_RS_Second_Approver__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Project_Proposal__c.I_RS_Second_Approver__c</field>
                <operation>notEqual</operation>
            </criteriaItems>
        </entryCriteria>
        <label>Seeking Approval from Second Approver</label>
        <name>Seeking_Approval_from_Second_Approver</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <emailTemplate>unfiled$public/Seek_Approval_for_Project_Proposal</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Project_Proposal__c.RecordType</field>
            <operation>equals</operation>
            <value>Grant with limited applications,Proposal,Other grants,Notice of intention,Contract (La Trobe template),Grant with limited applications,Proposal,Contract (Client Template),Other grants,Notice of intention,Contract (La Trobe Template)</value>
        </criteriaItems>
        <criteriaItems>
            <field>Project_Proposal__c.I_RS_Status__c</field>
            <operation>equals</operation>
            <value>Review by Research Office,Review Contract,Draft contract</value>
        </criteriaItems>
        <criteriaItems>
            <field>Project_Proposal__c.I_RS_First_Approver__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Status_update_for_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Status_Update_Recall_OR_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Field_Update_to_Seek_Approval</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Approval_Toggle_field_One</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Project Proposal for Approval Process</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>true</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <recallActions>
        <action>
            <name>Status_Update_Recall_OR_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
