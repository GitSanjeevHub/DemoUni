<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>GRS</submitter>
        <type>role</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>I_RS_dummy_field2__c</field>
        <field>Name</field>
        <field>I_RS_Candidate_full_name__c</field>
        <field>I_RS_Degree__c</field>
        <field>I_RS_Principal_supervisor__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>AR_Change_Status_to_DGR_Approval</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>I_RS_Supervisor_Approver_User__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Request Approval to Supervisor</label>
        <name>Request_Approval_to_Supervisor</name>
        <rejectionActions>
            <action>
                <name>Email_to_candidate_when_AR_form_rejected_by_supervisor</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>AR_Change_status_to_BGR_approva</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>I_RS_DGR_Approver_User__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Ar- Seek approval from DGR</label>
        <name>Ar_Seek_approval_from_DGR</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Email_to_candidate_when_AR_form_rejected_by_SDGR</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Email_to_supervisor_when_AR_form_rejected_by_SDGR</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>I_RS_BGR_approver_User__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>AR-Seek approval from BGR</label>
        <name>AR_Seek_approval_from_BGR</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Email_to_candidate_when_AR_form_rejected_by_Chair_BGR</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Email_to_SDGR_when_AR_form_rejected_by_Chair_BGR</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Email_to_supervisor_when_AR_form_rejected_by_Chair_BGR</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <emailTemplate>Thesis_Submissions/AR_Submission_for_Approval</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Amendment_Report__c.I_RS_Status__c</field>
            <operation>equals</operation>
            <value>Draft</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>AR_Change_status_to_GRS_Processing</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Email_to_Candidate_when_AR_approved_by_Chair_BGR</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Email_to_supervisor_when_AR_approved</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>AR_Set_Status_to_Draft</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>AR_Change_Status_to_Supervisor_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Amendment Report Approval</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
