<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <submitter>I_RS_Graduate_Research_School</submitter>
        <type>group</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>I_RS_Approval_Page_Instruction__c</field>
        <field>Name</field>
        <field>I_RS_Candidate_Full_Name__c</field>
        <field>I_RS_Degree__c</field>
        <field>I_RS_Thesis_Title__c</field>
        <field>I_RS_Field_of_Research__c</field>
        <field>I_RS_Embargo_period_requested__c</field>
        <field>I_RS_Embargo_Request_Justification__c</field>
        <field>I_RS_Reasons_for_the_embargo_header__c</field>
        <field>I_RS_Blank_Space__c</field>
        <field>I_RS_Embargo_reason_pubs_or_patents__c</field>
        <field>I_RS_Embargo_Reason_Commerical_IP__c</field>
        <field>I_RS_Embargo_Reason_Public_interest__c</field>
        <field>I_RS_Embargo_ReasonEthical_sensitivities__c</field>
        <field>I_RS_Embargo_Reason_Copyright__c</field>
        <field>I_RS_Embargo_Reason_Other_please_detail__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Set_ATC_Status_to_Chair_BGR_Approval</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>I_RS_Supervisor_Approver__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Supervisor Approval</label>
        <name>Supervisor_Approval</name>
        <rejectionActions>
            <action>
                <name>ATC_Rejected_by_Supervisor</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Set_ATC_Status_to_GRS_Embargo_Processing</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>I_RS_BGR_Approver__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>BGR Approval</label>
        <name>BGR_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>ATC_Rejected_by_BGR_Candidate</name>
                <type>Alert</type>
            </action>
            <action>
                <name>ATC_Rejected_by_BGR_Supervisor</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <emailTemplate>Thesis_Submissions/ATC_Submitted_for_Approval</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Access_to_Thesis_Consent__c.I_RS_Status__c</field>
            <operation>equals</operation>
            <value>GRS Review</value>
        </criteriaItems>
        <criteriaItems>
            <field>Access_to_Thesis_Consent__c.I_RS_Embargo_period_requested__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Set_ATC_Status_to_Draft</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Set_ATC_Status_to_Supervisor_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Access to Thesis Consent Form Approval</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
