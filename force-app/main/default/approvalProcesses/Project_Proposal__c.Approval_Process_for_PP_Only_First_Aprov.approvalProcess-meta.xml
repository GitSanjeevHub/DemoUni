<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <submitter>Contracts</submitter>
        <type>roleSubordinatesInternal</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>Grants</submitter>
        <type>roleSubordinatesInternal</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>I_RS_Administring_Organisation__c</field>
        <field>I_RS_Account_Organisation__c</field>
        <field>I_RS_IP_Position__c</field>
        <field>I_RS_Amount_Requested__c</field>
        <field>I_RS_Awarded_Amount__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Update_Approval_Toggle_field_two</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>I_RS_First_Approver__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>Unanimous</whenMultipleApprovers>
        </assignedApprover>
        <label>Seeking Approval</label>
        <name>Seeking_Approval</name>
    </approvalStep>
    <emailTemplate>unfiled$public/Seek_Approval_for_Project_Proposal</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>(1 AND ( 2 OR 3) AND 4 AND 5)</booleanFilter>
        <criteriaItems>
            <field>Project_Proposal__c.RecordType</field>
            <operation>equals</operation>
            <value>External Grant,Contract (La Trobe Template),Contract (Client Template),Grant with limited applications,Non Public Proposal,Proposal</value>
        </criteriaItems>
        <criteriaItems>
            <field>Project_Proposal__c.I_RS_Status__c</field>
            <operation>equals</operation>
            <value>Create Proposal,Drafting NOI,HoS NOI Validation,Pitch Session,Peer review draft,Peer review draft complete,Panel Review,Proposal Review,Final draft,Draft Proposal,Provide Project Details,Contract Instructions,Review by Research Office</value>
        </criteriaItems>
        <criteriaItems>
            <field>Project_Proposal__c.I_RS_Status__c</field>
            <operation>equals</operation>
            <value>Draft contract,Review Contract</value>
        </criteriaItems>
        <criteriaItems>
            <field>Project_Proposal__c.I_RS_First_Approver__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Project_Proposal__c.I_RS_Second_Approver__c</field>
            <operation>equals</operation>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Set_Approval_Flag_False</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Approver_s_Comments_CB_to_TRUE</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Chatter_Post_to_TRUE</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Set_Approval_Flag_False</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Status_Update_Recall_OR_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Approver_s_Comments_CB_to_TRUE</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Field_Update_to_Seek_Approval</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Set_Approval_Flag_True</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Approval_Toggle_field_One</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Approver_s_Comments_CB_to_TRUE</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Approval Process for PP Only First Aprov</label>
    <recallActions>
        <action>
            <name>Set_Approval_Flag_False</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Status_Update_Recall_OR_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
