<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>phone_number_format_Home</fullName>
    <active>true</active>
    <errorConditionFormula>!ISBLANK(HomePhone) &amp;&amp;
!REGEX(HomePhone, &quot;^[\\+0-9\\s]+$&quot;)</errorConditionFormula>
    <errorDisplayField>HomePhone</errorDisplayField>
    <errorMessage>Phone number can only consist of numbers, +, and spaces</errorMessage>
</ValidationRule>
