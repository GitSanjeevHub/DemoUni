<?xml version="1.0" encoding="UTF-8"?>
<QuickAction xmlns="http://soap.sforce.com/2006/04/metadata">
    <description>This quick action converts the standard opportunity to Funding Opportunity</description>
    <fieldOverrides>
        <field>I_RS_Maximum_Available_Budget__c</field>
        <formula>Opportunity.Amount</formula>
    </fieldOverrides>
    <fieldOverrides>
        <field>I_RS_Opportunity__c</field>
        <formula>Opportunity.Id</formula>
    </fieldOverrides>
    <fieldOverrides>
        <field>I_RS_Opportunity_Sub_Type__c</field>
        <formula>TEXT(Opportunity.I_RS_Opportunity_Sub_Type__c)</formula>
    </fieldOverrides>
    <fieldOverrides>
        <field>I_RS_Organisation__c</field>
        <formula>Opportunity.AccountId</formula>
    </fieldOverrides>
    <fieldOverrides>
        <field>I_RS_Private__c</field>
        <formula>Opportunity.IsPrivate</formula>
    </fieldOverrides>
    <fieldOverrides>
        <field>I_RS_Proposal_to_be_Submitted_By__c</field>
        <literalValue>Researcher</literalValue>
    </fieldOverrides>
    <fieldOverrides>
        <field>I_RS_Research_Office_Contact__c</field>
        <formula>Opportunity.I_RS_Research_Portfolio_Contact__c</formula>
    </fieldOverrides>
    <fieldOverrides>
        <field>I_RS_Source__c</field>
        <literalValue>Industry Engagement</literalValue>
    </fieldOverrides>
    <fieldOverrides>
        <field>I_RS_Status__c</field>
        <literalValue>Initial</literalValue>
    </fieldOverrides>
    <fieldOverrides>
        <field>I_RS_Summary_of_Opportunity__c</field>
        <formula>Opportunity.Description</formula>
    </fieldOverrides>
    <fieldOverrides>
        <field>I_RS_Type_of_Opportunity__c</field>
        <formula>TEXT(Opportunity.I_RS_Type_of_Opportunity__c)</formula>
    </fieldOverrides>
    <fieldOverrides>
        <field>Name</field>
        <formula>Opportunity.Name</formula>
    </fieldOverrides>
    <label>Convert To Funding Opportunity</label>
    <optionsCreateFeedItem>true</optionsCreateFeedItem>
    <quickActionLayout>
        <layoutSectionStyle>TwoColumnsLeftToRight</layoutSectionStyle>
        <quickActionLayoutColumns>
            <quickActionLayoutItems>
                <emptySpace>false</emptySpace>
                <field>Name</field>
                <uiBehavior>Required</uiBehavior>
            </quickActionLayoutItems>
            <quickActionLayoutItems>
                <emptySpace>false</emptySpace>
                <field>I_RS_Type_of_Opportunity__c</field>
                <uiBehavior>Required</uiBehavior>
            </quickActionLayoutItems>
            <quickActionLayoutItems>
                <emptySpace>false</emptySpace>
                <field>I_RS_Status__c</field>
                <uiBehavior>Edit</uiBehavior>
            </quickActionLayoutItems>
            <quickActionLayoutItems>
                <emptySpace>false</emptySpace>
                <field>I_RS_Research_Office_Contact__c</field>
                <uiBehavior>Required</uiBehavior>
            </quickActionLayoutItems>
            <quickActionLayoutItems>
                <emptySpace>false</emptySpace>
                <field>I_RS_Summary_of_Opportunity__c</field>
                <uiBehavior>Required</uiBehavior>
            </quickActionLayoutItems>
        </quickActionLayoutColumns>
        <quickActionLayoutColumns>
            <quickActionLayoutItems>
                <emptySpace>false</emptySpace>
                <field>I_RS_Private__c</field>
                <uiBehavior>Edit</uiBehavior>
            </quickActionLayoutItems>
            <quickActionLayoutItems>
                <emptySpace>false</emptySpace>
                <field>I_RS_Opportunity_Sub_Type__c</field>
                <uiBehavior>Required</uiBehavior>
            </quickActionLayoutItems>
            <quickActionLayoutItems>
                <emptySpace>false</emptySpace>
                <field>I_RS_Proposal_to_be_Submitted_By__c</field>
                <uiBehavior>Required</uiBehavior>
            </quickActionLayoutItems>
            <quickActionLayoutItems>
                <emptySpace>false</emptySpace>
                <field>I_RS_Organisation__c</field>
                <uiBehavior>Edit</uiBehavior>
            </quickActionLayoutItems>
        </quickActionLayoutColumns>
    </quickActionLayout>
    <successMessage>Successfully converted to Funding opportunity</successMessage>
    <targetObject>Research_Opportunity__c</targetObject>
    <targetParentField>I_RS_Opportunity__c</targetParentField>
    <targetRecordType>Research_Opportunity__c.I_RS_Funding_Opportunity</targetRecordType>
    <type>Create</type>
</QuickAction>
