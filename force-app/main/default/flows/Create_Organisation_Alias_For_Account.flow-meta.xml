    <apiVersion>49.0</apiVersion>
    <decisions>
        <name>Is_valid_record_type</name>
        <label>Is valid record type</label>
        <locationX>353</locationX>
        <locationY>356</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Is_valid_record_type_Yes</name>
            <conditionLogic>or</conditionLogic>
            <conditions>
                <leftValueReference>Get_Record_Type_Name</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>I_ST_Educational_Institution</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>Get_Record_Type_Name</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>I_RS_External_Organisation</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>Get_Record_Type_Name</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>I_RS_La_Trobe_Organisation_Unit</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Query_Existing_Organisation_Alias</targetReference>
            </connector>
            <label>Yes</label>
        </rules>
    </decisions>
    <decisions>
        <description>Check if the Organisation Alias exists with the Account name</description>
        <name>Organisation_Alias_Exists</name>
        <label>Organisation Alias Exists</label>
        <locationX>735</locationX>
        <locationY>345</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Does_not_exist</name>
            <conditionLogic>or</conditionLogic>
            <conditions>
                <leftValueReference>Query_Existing_Organisation_Alias</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Create_New_Organisation_Alias_For_the_Account</targetReference>
            </connector>
            <label>Does not exist</label>
        </rules>
    </decisions>
    <description>This Flow creates the Organisation Alias for all the Accounts (irrespective of record type) when a new Account is created or edited (only if an Organisation Alias for that account name does not exists)</description>
